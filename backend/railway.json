{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "installCommand": "npm install",
        "buildCommand": "npm run build"
    },
    "deploy": {
        "startCommand": "node dist/main",
        "healthcheckPath": "/api/health",
        "restartPolicyType": "ON_FAILURE"
    }
}